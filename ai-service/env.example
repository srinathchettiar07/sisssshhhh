# Environment Configuration
PYTHON_ENV=development
PORT=8000

# Database
MONGODB_URI=mongodb://localhost:27017/campus-placement

# Hugging Face
HF_API_TOKEN=your-huggingface-token-here
HF_MODEL_CACHE_DIR=./models

# Vector Database
FAISS_INDEX_PATH=./data/faiss_index
VECTOR_DB_TYPE=faiss

# AI Models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=microsoft/DialoGPT-medium
CHAT_MODEL=microsoft/DialoGPT-medium

# Model Configuration
MODEL_MODE=local
MAX_TOKENS=512
TEMPERATURE=0.7

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Certificate Generation
CERTIFICATE_TEMPLATE_PATH=./templates/certificate.html
QR_CODE_SIZE=200

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ai-service.log

